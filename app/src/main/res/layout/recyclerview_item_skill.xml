<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/pres_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_skill"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Blood Well" />

                <TextView
                    android:id="@+id/cost_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10% of current Health" />

                <TextView
                    android:id="@+id/range_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="600" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/description_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pres_skill"
            tools:text="fihsagkhdfkghadkfghkfahfkdhskhadsk" />

    </RelativeLayout>
</android.support.v7.widget.CardView>